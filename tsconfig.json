{
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
